# .github/workflows/lint.yml
name: Lint

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  lint:
    runs-on: ubuntu-latest
    steps:
      - name: Check out code
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.x'

      - name: Install linting tools
        run: |
          python -m pip install --upgrade pip
          pip install pylint pycodestyle

      - name: Run pylint
        # Adjust the target path (e.g. your package or src/)
        run: |
          pylint your_package_or_module \
            --exit-zero \
            --output-format=colorized \
            --disable=R,C
        # --exit-zero lets the job complete so you still see all reports;
        # remove it if you want failures to block the CI.

      - name: Run pep8 (pycodestyle)
        # You can tweak max line length, ignore codes, etc.
        run: |
          pycodestyle . \
            --max-line-length=88 \
            --ignore=E203

      - name: Upload linter reports
        if: always()
        uses: actions/upload-artifact@v3
        with:
          name: lint-reports
          path: |
            pylint.*.txt
            pycodestyle-report.txt
